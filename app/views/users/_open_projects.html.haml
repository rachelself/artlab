- if current_user.ads.present?
  .large-12.columns.panel
    %h3.small.subheader Ads
    - current_user.ads.each do |ad|
      .row
        .large-4.columns
          = image_tag ad.project_photo.url(:thumb), class: "th"
        .large-4.columns
          %h4
            = link_to ad.title, ad_path(ad)
          %p
            = "Date Posted: "
            = "#{ad.created_at.strftime("%m/%d/%Y")}"
          %h5 Tags
          - ad.tags.each do |tag|
            = link_to tag.name
        .large-4.columns
          %h5= "Project Description"
          %p= ad.description
