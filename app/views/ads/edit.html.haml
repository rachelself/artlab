.row
  = minimal_form_for(@ad, method: 'patch', html: { multipart: true }) do |f|
    .row.collapse
      %h1= "Edit Your " + @ad.title + " Ad"
    .row
      .large-12.columns
        .row.collapse.prefix-radius
          .small-3.columns
            %span.prefix Title
          .small-9.columns
            = f.input :title
        .row.collapse.prefix-radius
          .small-3.columns
            %span.prefix Description
          .small-9.columns
            = f.input :description, hint: "500 character limit"
        .row.collapse.prefix-radius
          .small-3.columns
            %span.prefix Project Photo
          .small-9.columns
            = f.input :project_photo, as: "file"
            - if @ad.project_photo.present?
              = image_tag(@ad.project_photo.url(:thumb))
              -# .small-3.columns
              -#   = f.input :remove_project_photo, as: :boolean, checked_value: true, unchecked_value: false
              -#   %span Remove Project Photo
              -#
            = f.hidden_field :project_photo_cache
        .row.collapse.prefix-radius
          .small-3.columns
            %span.prefix Local Only?
          .small-9.columns.local-only
            = f.input :local_only, as: :radio_buttons
        .row.collapse.prefix-radius
          .small-3.columns
            %span.prefix Tags
          .small-9.columns
            = f.association :tags, collection: Tag.all, required: true, as: :select
          = f.submit "Save Changes", class: "button radius right"
          = link_to "Discard Changes", dashboard_path, class: "button radius secondary right"

