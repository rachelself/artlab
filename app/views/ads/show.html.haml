.row.panel
  - if @ad.user_id == current_user.id
    = link_to "Edit", edit_ad_path, class: "button tiny radius right"
  %h1= @ad.title
  .post-details
    = image_tag @user.profile_image.url(:small_thumb), class: "th left ad_creator_image"
    %h6
      = "Posted by"
      = link_to "#{@user.first_name} " + "#{@user.last_name}"
      = "on"
      = @ad.created_at.strftime("%m/%d/%Y")
  .local
    - if @ad.local_only
      %p Local Only, please
  .tags
    - if @ad.tags.present?
      %p= "Tagged: "
      - @ad.tags.each do |tag|
        = link_to tag.name
    - else
      %p Tagged: No tags added yet.

  %hr
  .small-12.medium-6.large-4.columns
    = image_tag @ad.project_photo.url(:thumb), class: "th project_photo"

  .small-12.medium-6.large-8.columns
    %h3= @ad.description
