.header-image
  .header-image-text.columns.small-8.medium-6.large-5
    %h1.tagline connect & collaborate
  .header-image-banner
%section.showcase
  %h3.text-center Showcase past work & discover inspiring talent
  .row
    %ul.example-galleries.columns.small-12-medium-12.large-12
      .small-block-grid-2.medium-block-grid-3.large-block-grid-3
        %li.panel
          = image_tag "installation-tree.jpg", class: "example-gallery"
          %h5 Installations
        %li.panel
          = image_tag "book_arts_carving.jpg", class: "example-gallery"
          %h5 Book Arts
        %li.panel
          = image_tag "yarn.jpg", class: "example-gallery"
          %h5 Hand-dyed Yarns
%section.collaborate
  %h3.text-center Advertise your project as an open collaboration
  .row.panel
    .small-12.medium-5.large-6.columns
      = image_tag "fiber_installation.jpg", class: "th left example-ad"
    .small-12.medium-7.large-6.columns
      %h4.example-ad-title Fibers Installation

      .details
        = image_tag "example_user.jpg", class: "th left example-user"
        %h6
          = "Posted by"
          = link_to "Ada Summers"
          = "on"
          = "9/21/2014"
      .tags
        %p
          %strong Tagged:
          = link_to "Fibers"
      %hr
      %p Seeking a fibers artist to collaborate on a new installation I'm working on.
      .local
        %p Local Only, please

%section.join
  .band
    .columns.small-12.medium-5.medium-offset-4.large-4
      %h3.text-center
        ="Start Collaborating."
        = link_to "Sign Up", new_user_registration_path, class: "button radius secondary"
